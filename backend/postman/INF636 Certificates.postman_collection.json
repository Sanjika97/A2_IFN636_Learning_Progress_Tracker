		{
			"name": "Create certificates",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(201);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"\r",
							"pm.test(\"Certificate created successfully\", function () {\r",
							"    pm.expect(response).to.have.property(\"_id\");\r",
							"});\r",
							"\r",
							"if (response._id) {\r",
							"        pm.environment.set(\"certificate_id\", response._id);\r",
							"        console.log(\"Certificate created and ID saved:\", response._id);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"moduleId\": \"{{module_id}}\"\r\n}",
					"options": {
